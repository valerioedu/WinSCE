<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="SCE2.GitControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SCE2"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <StackPanel Padding="10" Spacing="10">
                <TextBlock Text="Git" FontSize="16" FontWeight="Bold" 
                          Foreground="{ThemeResource SystemBaseHighColor}"/>

                <Border Background="{ThemeResource SystemChromeLowColor}" 
                        BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}"
                        BorderThickness="1" CornerRadius="4" Padding="8">
                    <StackPanel Spacing="5">
                        <TextBlock Text="Repository Status" FontWeight="SemiBold" FontSize="13"/>
                        <TextBlock x:Name="RepositoryPath" Text="No repository detected" 
                                  FontSize="11" Foreground="{ThemeResource SystemBaseMediumColor}"/>
                        <TextBlock x:Name="CurrentBranch" Text="Branch: main" 
                                  FontSize="11" Foreground="{ThemeResource SystemBaseMediumColor}"/>
                        <TextBlock x:Name="RepositoryStatus" Text="Working tree clean" 
                                  FontSize="11" Foreground="{ThemeResource SystemBaseMediumColor}"/>
                    </StackPanel>
                </Border>

                <Border Background="{ThemeResource SystemChromeLowColor}" 
                        BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}"
                        BorderThickness="1" CornerRadius="4" Padding="8">
                    <StackPanel Spacing="8">
                        <TextBlock Text="Quick Actions" FontWeight="SemiBold" FontSize="13"/>

                        <StackPanel Orientation="Horizontal" Spacing="5">
                            <Button x:Name="InitButton" Content="Init" FontSize="11" 
                                   Background="Transparent" BorderThickness="1"
                                   BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}"
                                   Click="InitButton_Click"/>
                            <Button x:Name="CloneButton" Content="Clone" FontSize="11"
                                   Background="Transparent" BorderThickness="1"
                                   BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}"
                                   Click="CloneButton_Click"/>
                            <Button x:Name="RefreshButton" Content="Refresh" FontSize="11"
                                   Background="Transparent" BorderThickness="1"
                                   BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}"
                                   Click="RefreshButton_Click"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Spacing="5">
                            <Button x:Name="PullButton" Content="Pull" FontSize="11"
                                   Background="Transparent" BorderThickness="1"
                                   BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}"
                                   Click="PullButton_Click"/>
                            <Button x:Name="PushButton" Content="Push" FontSize="11"
                                   Background="Transparent" BorderThickness="1"
                                   BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}"
                                   Click="PushButton_Click"/>
                            <Button x:Name="FetchButton" Content="Fetch" FontSize="11"
                                   Background="Transparent" BorderThickness="1"
                                   BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}"
                                   Click="FetchButton_Click"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <Border Background="{ThemeResource SystemChromeLowColor}" 
                        BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}"
                        BorderThickness="1" CornerRadius="4" Padding="8">
                    <StackPanel Spacing="8">
                        <StackPanel Orientation="Horizontal" Spacing="5">
                            <TextBlock Text="Changes" FontWeight="SemiBold" FontSize="13"/>
                            <Button x:Name="StageAllButton" Content="Stage All" FontSize="10"
                                   Background="Transparent" BorderThickness="1"
                                   BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}"
                                   Padding="4,2" Click="StageAllButton_Click"/>
                        </StackPanel>

                        <ListView x:Name="ChangesListView" 
                                 MaxHeight="200"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 SelectionMode="Multiple">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="20"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0" Text="{Binding Status}" 
                                                  FontFamily="Consolas" FontSize="10"
                                                  Foreground="{Binding StatusColor}"/>
                                        <TextBlock Grid.Column="1" Text="{Binding FileName}" 
                                                  FontSize="11" Margin="5,0"/>
                                        <Button Grid.Column="2" Content="+" FontSize="10"
                                               Background="Transparent" BorderThickness="0"
                                               Padding="2" Width="20" Height="20"/>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </Border>
                
                <Border Background="{ThemeResource SystemChromeLowColor}" 
                        BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}"
                        BorderThickness="1" CornerRadius="4" Padding="8">
                    <StackPanel Spacing="8">
                        <TextBlock Text="Commit" FontWeight="SemiBold" FontSize="13"/>

                        <TextBox x:Name="CommitMessageTextBox" 
                                PlaceholderText="Enter commit message..."
                                Background="{ThemeResource SystemChromeLowColor}"
                                BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}"
                                MinHeight="60" AcceptsReturn="True" TextWrapping="Wrap">
                            <TextBox.Resources>
                                <SolidColorBrush x:Key="TextControlFocusVisualPrimaryBrush" Color="Transparent"/>
                                <SolidColorBrush x:Key="TextControlBorderBrushFocused" Color="Gray"/>
                            </TextBox.Resources>
                        </TextBox>

                        <StackPanel Orientation="Horizontal" Spacing="5">
                            <Button x:Name="CommitButton" Content="Commit" FontSize="11"
                                   Background="{ThemeResource SystemAccentColor}"
                                   Foreground="White" BorderThickness="0"
                                   Click="CommitButton_Click"/>
                            <Button x:Name="CommitAndPushButton" Content="Commit Push" FontSize="11"
                                   Background="Transparent" BorderThickness="1"
                                   BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}"
                                   Click="CommitAndPushButton_Click"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <Border Background="{ThemeResource SystemChromeLowColor}" 
                        BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}"
                        BorderThickness="1" CornerRadius="4" Padding="8">
                    <StackPanel Spacing="8">
                        <StackPanel Orientation="Horizontal" Spacing="5">
                            <TextBlock Text="Branches" FontWeight="SemiBold" FontSize="13"/>
                            <Button x:Name="NewBranchButton" Content="New Branch" FontSize="10"
                                   Background="Transparent" BorderThickness="1"
                                   BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}"
                                   Padding="4,2" Click="NewBranchButton_Click"/>
                        </StackPanel>

                        <ListView x:Name="BranchesListView" 
                                 MaxHeight="150"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 SelectionMode="Single">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="20"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0" Text="{Binding Indicator}" 
                                                  FontFamily="Consolas" FontSize="11"
                                                  Foreground="{ThemeResource SystemAccentColor}"/>
                                        <TextBlock Grid.Column="1" Text="{Binding Name}" 
                                                  FontSize="11" Margin="5,0"/>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </Border>

                <Border Background="{ThemeResource SystemChromeLowColor}" 
                        BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}"
                        BorderThickness="1" CornerRadius="4" Padding="8">
                    <StackPanel Spacing="8">
                        <TextBlock Text="Recent Commits" FontWeight="SemiBold" FontSize="13"/>

                        <ListView x:Name="CommitsListView" 
                                 MaxHeight="200"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 SelectionMode="Single">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Spacing="3">
                                        <TextBlock Text="{Binding Message}" FontSize="11" TextWrapping="Wrap"/>
                                        <StackPanel Orientation="Horizontal" Spacing="10">
                                            <TextBlock Text="{Binding Hash}" FontFamily="Consolas" 
                                                      FontSize="10" Foreground="{ThemeResource SystemBaseMediumColor}"/>
                                            <TextBlock Text="{Binding Author}" FontSize="10" 
                                                      Foreground="{ThemeResource SystemBaseMediumColor}"/>
                                            <TextBlock Text="{Binding Date}" FontSize="10" 
                                                      Foreground="{ThemeResource SystemBaseMediumColor}"/>
                                        </StackPanel>
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>