<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="SCE2.AIChatControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SCE2"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource SystemChromeLowColor}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" 
                Background="{ThemeResource SystemChromeMediumColor}"
                BorderThickness="0,0,0,1" 
                BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}"
                Padding="12,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}" 
                              Glyph="&#xE8BD;" 
                              FontSize="16" 
                              Margin="0,0,8,0"
                              Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
                    <TextBlock Text="AI Assistant" 
                               FontWeight="SemiBold" 
                               FontSize="14"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <Button x:Name="ApiKeysButton"
                        Grid.Column="1"
                        Content="Api Keys ⏷"
                        Background="Transparent"
                        BorderThickness="0"
                        Height="26"
                        FontSize="12"
                        Margin="2,0,2,0">
                    <Button.Flyout>
                        <Flyout>
                            <StackPanel CornerRadius="0">
                                <StackPanel Orientation="Vertical" Spacing="4">
                                    <TextBlock Text="Claude API Key" FontSize="12"/>
                                    <TextBox x:Name="ClaudeApiKeyInput" Width="200" PlaceholderText="Enter Claude API Key" BorderThickness="0" TextChanged="ClaudeApiKeyInput_TextChanged" PreviewKeyDown="ClaudeApiKeyInput_PreviewKeyDown"/>
                                </StackPanel>
                                <StackPanel Orientation="Vertical" Spacing="4" Padding="0,4,0,4">
                                    <TextBlock Text="OpenAI API Key" FontSize="12"/>
                                    <TextBox x:Name="OpenAiApiKeyInput" Width="200" PlaceholderText="Enter OpenAI API Key" BorderThickness="0" TextChanged="OpenAiApiKeyInput_TextChanged" PreviewKeyDown="OpenAiApiKeyInput_PreviewKeyDown"/>
                                </StackPanel>
                            </StackPanel>
                        </Flyout>
                    </Button.Flyout>

                </Button>

                <Button x:Name="SettingsButton"
                        Grid.Column="2"
                        Content="&#xE713;"
                        Background="Transparent"
                        FontFamily="{ThemeResource SymbolThemeFontFamily}"
                        BorderThickness="0"
                        Margin="0"
                        Padding="0"
                        Width="26" 
                        Height="26"
                        FontSize="12">
                    <Button.Flyout>
                        <MenuFlyout>
                            <MenuFlyoutItem x:Name="DisconnectButton" Text="Disconnect all keys" Click="DisconnectButton_Click"/>
                            <MenuFlyoutItem x:Name="DisconnectOpenAIButton" Text="Disconnect OpenAI key" Click="DisconnectOpenAIButton_Click"/>
                            <MenuFlyoutItem x:Name="DisconnectClaudeButton" Text="Disconnect Anthropic key" Click="DisconnectClaudeButton_Click"/>
                        </MenuFlyout>
                    </Button.Flyout>
                </Button>

                <Button x:Name="CloseButton" 
                        Grid.Column="3"
                        Content="&#xE711;" 
                        FontFamily="{ThemeResource SymbolThemeFontFamily}"
                        Background="Transparent" 
                        BorderThickness="0"
                        Margin="0"
                        Padding="0"
                        Width="26" 
                        Height="26"
                        FontSize="12"
                        Click="CloseButton_Click"
                        ToolTipService.ToolTip="Close AI Chat"/>
            </Grid>
        </Border>

        <StackPanel x:Name="LoginPanel" Grid.Row="1" Padding="12" Spacing="8">

            <TextBlock x:Name="StatusText" 
                       Text="" 
                       Foreground="{ThemeResource SystemErrorTextColor}"
                       FontSize="12"
                       TextWrapping="Wrap"
                       Visibility="Collapsed"/>
        </StackPanel>
        
        <ScrollViewer x:Name="ChatScrollViewer" 
                      Grid.Row="2"
                      VerticalScrollMode="Auto" 
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollMode="Disabled"
                      HorizontalScrollBarVisibility="Disabled"
                      Padding="12,8"
                      Visibility="Collapsed">
            <StackPanel x:Name="ChatContainer" Spacing="12"/>
        </ScrollViewer>

        <StackPanel x:Name="WelcomePanel" 
                    Grid.Row="2" 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Center"
                    Padding="24"
                    Spacing="16"
                    Visibility="Visible">
            <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}" 
                      Glyph="&#xE8BD;" 
                      FontSize="48" 
                      HorizontalAlignment="Center"
                      Foreground="{ThemeResource AccentTextFillColorSecondaryBrush}"/>
            <TextBlock Text="AI Coding Assistant" 
                       FontSize="18" 
                       FontWeight="SemiBold"
                       HorizontalAlignment="Center"/>
            <TextBlock Text="Connect to an AI model to get coding help, explanations, and suggestions." 
                       TextWrapping="Wrap" 
                       TextAlignment="Center"
                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                       FontSize="14"
                       MaxWidth="200"/>
        </StackPanel>

        <Border x:Name="TypingIndicator" 
                Grid.Row="3" 
                Padding="12,8"
                Visibility="Collapsed">
            <StackPanel Orientation="Horizontal" Spacing="8">
                <ProgressRing Width="16" Height="16" IsActive="True"/>
                <TextBlock Text="AI is typing..." 
                           FontSize="12" 
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <Border x:Name="InputPanel" 
                Grid.Row="4" 
                Background="{ThemeResource SystemChromeMediumColor}"
                BorderThickness="0,1,0,0" 
                BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}"
                Padding="12"
                Visibility="Collapsed">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" 
                            Orientation="Horizontal" 
                            Spacing="4" 
                            Margin="0,0,0,8">
                    <Button x:Name="ExplainCodeButton" 
                            Content="Explain Code" 
                            FontSize="11"
                            Padding="8,4"
                            Background="Transparent"
                            BorderThickness="1"
                            BorderBrush="{ThemeResource ControlStrokeColorDefaultBrush}"
                            CornerRadius="12"
                            Click="QuickAction_Click" 
                            Tag="explain"/>
                    <Button x:Name="FixCodeButton" 
                            Content="Fix Issues" 
                            FontSize="11"
                            Padding="8,4"
                            Background="Transparent"
                            BorderThickness="1"
                            BorderBrush="{ThemeResource ControlStrokeColorDefaultBrush}"
                            CornerRadius="12"
                            Click="QuickAction_Click" 
                            Tag="fix"/>
                    <Button x:Name="OptimizeCodeButton" 
                            Content="Optimize" 
                            FontSize="11"
                            Padding="8,4"
                            Background="Transparent"
                            BorderThickness="1"
                            BorderBrush="{ThemeResource ControlStrokeColorDefaultBrush}"
                            CornerRadius="12"
                            Click="QuickAction_Click" 
                            Tag="optimize"/>
                </StackPanel>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox x:Name="MessageInput" 
                             Grid.Column="0"
                             PlaceholderText="Ask about your code..."
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             MaxHeight="100"
                             VerticalAlignment="Bottom"
                             KeyDown="MessageInput_KeyDown"
                             CornerRadius="0"
                             BorderThickness="1"
                             BorderBrush="Gray"
                             FocusVisualPrimaryBrush="Transparent">
                             <TextBox.Resources>
                            <SolidColorBrush x:Key="TextControlFocusVisualPrimaryBrush" Color="Transparent"/>
                            <SolidColorBrush x:Key="TextControlBorderBrushFocused" Color="Gray"/>
                        </TextBox.Resources>

                    </TextBox>

                    <Button x:Name="AttachCodeButton" 
                            Grid.Column="1"
                            Content="&#xE723;" 
                            FontFamily="{ThemeResource SymbolThemeFontFamily}"
                            Background="Transparent" 
                            BorderThickness="0"
                            Width="32" 
                            Height="32"
                            Margin="4,0,0,0"
                            Padding="0"
                            ToolTipService.ToolTip="Include current selection"
                            Click="AttachCodeButton_Click"/>

                    <Button x:Name="SendButton" 
                            Grid.Column="2"
                            Content="&#xE724;" 
                            FontFamily="{ThemeResource SymbolThemeFontFamily}"
                            Style="{ThemeResource AccentButtonStyle}"
                            Width="32" 
                            Height="32"
                            Margin="4,0,0,0"
                            Padding="0"
                            Click="SendButton_Click"
                            IsEnabled="False"/>
                </Grid>

                <Grid Grid.Row="2" Height="10"/>

                <Grid Grid.Row="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <ComboBox x:Name="ModelSelector" 
                              PlaceholderText="Select AI Model"
                              HorizontalAlignment="Stretch"
                              SelectionChanged="ModelSelector_SelectionChanged"
                              Background="Transparent"
                              BorderThickness="0"
                              Padding="8,0,0,0"
                              Margin="0"
                              CornerRadius="0">
                        <ComboBoxItem Content="Claude Opus 4.1" Tag="claude-opus-4-1-20250805"/>
                        <ComboBoxItem Content="Claude Sonnet 4.0" Tag="claude-sonnet-4-20250514"/>
                        <ComboBoxItem Content="o3-mini" Tag="o3-mini"/>
                        <ComboBoxItem Content="GPT 4.1" Tag="gpt-4.1"/>
                        <ComboBoxItem Content="GPT-4o" Tag="gpt-4o"/>
                    </ComboBox>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>