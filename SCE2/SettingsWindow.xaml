<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="SCE2.SettingsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SCE2"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Settings">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid>
        <NavigationView PaneDisplayMode="Left" IsBackButtonVisible="Collapsed" IsSettingsVisible="False" PaneTitle="Settings">
            <NavigationView.MenuItems>
                <NavigationViewItem Content="General" Icon="Setting"/>
                <NavigationViewItem Content="Editor" Icon="Edit"/>
                <NavigationViewItem Content="Theme" Icon="SetLockScreen"/>
                <NavigationViewItem Content="About" Icon="Help"/>
            </NavigationView.MenuItems>
            <Grid>
                
            </Grid>
        </NavigationView>
    </Grid>
</Window>
