<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="SCE2.TerminalControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SCE2"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Border BorderBrush="#FF464649" BorderThickness="0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Background="#FF2D2D30" Height="35">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                           Text="Terminal" 
                           FontSize="14" 
                           FontWeight="Normal"
                           Foreground="#FFCCCCCC" 
                           VerticalAlignment="Center"
                           Margin="16,0,0,0"/>

                <ComboBox x:Name="ShellSelector" 
                          Grid.Column="1"
                          SelectedIndex="0" 
                          SelectionChanged="ShellSelector_SelectionChanged"
                          VerticalAlignment="Center"
                          HorizontalAlignment="Center"
                          MinWidth="140"
                          Background="Transparent"
                          BorderBrush="#FF5A5A5A"
                          Foreground="#FFCCCCCC"
                          Height="30">
                    <ComboBoxItem Content="PowerShell" Tag="powershell"/>
                    <ComboBoxItem Content="Command Prompt" Tag="cmd"/>
                </ComboBox>

                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,16,0">
                    <Button x:Name="ClearButton" 
                            Width="34" Height="26"
                            Background="Transparent"
                            BorderThickness="0"
                            ToolTipService.ToolTip="Clear Terminal"
                            Click="Clear_Click">
                        <FontIcon Glyph="&#xE894;" 
                                  FontSize="13" 
                                  Foreground="#FFCCCCCC"/>
                    </Button>

                    <Button x:Name="ExportButton" 
                            Width="34" Height="26"
                            Background="Transparent"
                            BorderThickness="0"
                            Margin="6,0,0,0"
                            ToolTipService.ToolTip="Export Output"
                            Click="Export_Click">
                        <FontIcon Glyph="&#xE74E;" 
                                  FontSize="13" 
                                  Foreground="#FFCCCCCC"/>
                    </Button>

                    <Button x:Name="ResetButton" 
                            Width="34" Height="26"
                            Background="Transparent"
                            BorderThickness="0"
                            Margin="6,0,0,0"
                            ToolTipService.ToolTip="Reset Terminal"
                            Click="Reset_Click">
                        <FontIcon Glyph="&#xE72C;" 
                                  FontSize="13" 
                                  Foreground="#FFCCCCCC"/>
                    </Button>
                </StackPanel>
            </Grid>

            <Grid Grid.Row="1" Background="#FF0C0C0C">
                <ScrollViewer x:Name="OutputScrollViewer"
                              VerticalScrollBarVisibility="Auto" 
                              HorizontalScrollBarVisibility="Auto"
                              Padding="16,12"
                              ZoomMode="Disabled">

                    <StackPanel>
                        <RichTextBlock x:Name="OutputTextBlock"
                                       FontFamily="Cascadia Code,Consolas,Courier New" 
                                       FontSize="14"
                                       IsTextSelectionEnabled="True"
                                       Foreground="#FFCCCCCC"
                                       LineHeight="20"
                                       Margin="0,0,0,0">
                            <Paragraph x:Name="OutputParagraph" Margin="0"/>
                        </RichTextBlock>

                        <Grid x:Name="InputArea" Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal">
                                <TextBlock x:Name="PromptText" 
                                           FontFamily="Cascadia Code,Consolas,Courier New" 
                                           FontSize="14"
                                           VerticalAlignment="Top"
                                           Foreground="#FF00FF00"
                                           LineHeight="20"
                                           Margin="0,0,0,0"/>

                                <TextBlock x:Name="InputDisplayText" 
                                           FontFamily="Cascadia Code,Consolas,Courier New"
                                           FontSize="14"
                                           VerticalAlignment="Top"
                                           Foreground="#FFCCCCCC"
                                           LineHeight="20"
                                           Margin="0,0,0,0"/>

                                <Rectangle x:Name="Cursor"
                                           Width="2" 
                                           Height="16"
                                           Fill="#FFCCCCCC"
                                           VerticalAlignment="Top"
                                           Margin="0,2,0,0">
                                    <Rectangle.Resources>
                                        <Storyboard x:Name="CursorBlink" RepeatBehavior="Forever">
                                            <DoubleAnimation Storyboard.TargetName="Cursor"
                                                           Storyboard.TargetProperty="Opacity"
                                                           From="1" To="0" Duration="0:0:0.5"
                                                           AutoReverse="True"/>
                                        </Storyboard>
                                    </Rectangle.Resources>
                                </Rectangle>
                            </StackPanel>

                            <TextBox x:Name="InputTextBox" 
                                     Grid.Column="0" Grid.ColumnSpan="2"
                                     FontFamily="Cascadia Code,Consolas,Courier New"
                                     FontSize="14"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     Foreground="Transparent"
                                     VerticalAlignment="Top"
                                     Margin="0,0,0,0"
                                     Padding="0"
                                     AcceptsReturn="False"
                                     TextWrapping="NoWrap"
                                     KeyDown="InputTextBox_KeyDown"
                                     PreviewKeyDown="InputTextBox_PreviewKeyDown"
                                     TextChanged="InputTextBox_TextChanged"
                                     SelectionHighlightColor="Transparent"
                                     Opacity="0"/>
                        </Grid>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Grid>
    </Border>
</UserControl>