<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="SCE2.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SCE2"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="SCE">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid x:Name="CustomTitleBar" Grid.Row="0" Background="{ThemeResource SystemChromeLowColor}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Stretch">
                <Button Content="File" Padding="8,0" Margin="2,0,0,0" FontSize="13"
                        Background="Transparent" BorderThickness="0" 
                        VerticalAlignment="Stretch" VerticalContentAlignment="Center"
                        HorizontalContentAlignment="Center" CornerRadius="0"
                        x:Name="FileButton">
                    <Button.KeyboardAccelerators>
                        <KeyboardAccelerator Key="F" Modifiers="Menu" Invoked="FileMenuShortcut_Invoked"/>
                    </Button.KeyboardAccelerators>
                    <Button.Flyout>
                        <MenuFlyout>
                            <MenuFlyoutItem Text="New" FontSize="11" Click="New_Click"
                                            KeyboardAcceleratorTextOverride="Ctrl+N">
                                <MenuFlyoutItem.KeyboardAccelerators>
                                    <KeyboardAccelerator Key="N" Modifiers="Control"/>
                                </MenuFlyoutItem.KeyboardAccelerators>
                            </MenuFlyoutItem>

                            <MenuFlyoutItem Text="Open" FontSize="11" Click="Open_Click"
                                            KeyboardAcceleratorTextOverride="Ctrl+O">
                                <MenuFlyoutItem.KeyboardAccelerators>
                                    <KeyboardAccelerator Key="O" Modifiers="Control"/>
                                </MenuFlyoutItem.KeyboardAccelerators>
                            </MenuFlyoutItem>

                            <MenuFlyoutItem Text="Save" FontSize="11" Click="Save_Click"
                                            KeyboardAcceleratorTextOverride="Ctrl+S">
                                <MenuFlyoutItem.KeyboardAccelerators>
                                    <KeyboardAccelerator Key="S" Modifiers="Control"/>
                                </MenuFlyoutItem.KeyboardAccelerators>
                            </MenuFlyoutItem>
                            <MenuFlyoutSeparator/>
                            <MenuFlyoutItem Text="Quit" FontSize="11" Click="Quit_Click"
                                            KeyboardAcceleratorTextOverride="Ctrl+Q">
                                <MenuFlyoutItem.KeyboardAccelerators>
                                    <KeyboardAccelerator Key="Q" Modifiers="Control"/>
                                </MenuFlyoutItem.KeyboardAccelerators>
                            </MenuFlyoutItem>
                        </MenuFlyout>
                    </Button.Flyout>
                </Button>
                <Button Content="Languages" Padding="8,0" Margin="2,0,0,0" FontSize="13"
        Background="Transparent" BorderThickness="0"
        VerticalAlignment="Stretch" VerticalContentAlignment="Center"
        HorizontalContentAlignment="Center" CornerRadius="0">
                    <Button.Flyout>
                        <MenuFlyout>
                            <MenuFlyoutItem Text="C" FontSize="11" Tag="c" Click="SetLanguage_Click"/>
                            <MenuFlyoutItem Text="C++" FontSize="11" Tag="cpp" Click="SetLanguage_Click"/>
                            <MenuFlyoutItem Text="C#" FontSize="11" Tag="csharp" Click="SetLanguage_Click"/>
                            <MenuFlyoutSeparator/>
                            <MenuFlyoutItem Text="Java" FontSize="11" Tag="java" Click="SetLanguage_Click"/>
                            <MenuFlyoutItem Text="Go" FontSize="11" Tag="go" Click="SetLanguage_Click"/>
                            <MenuFlyoutItem Text="Rust" FontSize="11" Tag="rust" Click="SetLanguage_Click"/>
                            <MenuFlyoutItem Text="Python" FontSize="11" Tag="python" Click="SetLanguage_Click"/>
                            <MenuFlyoutSeparator/>
                            <MenuFlyoutItem Text="JavaScript" FontSize="11" Tag="javascript" Click="SetLanguage_Click"/>
                            <MenuFlyoutItem Text="HTML" FontSize="11" Tag="html" Click="SetLanguage_Click"/>
                            <MenuFlyoutItem Text="CSS" FontSize="11" Tag="css" Click="SetLanguage_Click"/>
                            <MenuFlyoutItem Text="XML" FontSize="11" Tag="xml" Click="SetLanguage_Click"/>
                            <MenuFlyoutItem Text="JSON" FontSize="11" Tag="json" Click="SetLanguage_Click"/>
                            <MenuFlyoutSeparator/>
                            <MenuFlyoutItem Text="Text" FontSize="11" Tag="text" Click="SetLanguage_Click"/>
                            <MenuFlyoutItem Text="Markdown" FontSize="11" Tag="markdown" Click="SetLanguage_Click"/>
                        </MenuFlyout>
                    </Button.Flyout>
                </Button>
                <Button Content="Git" Padding="8,0" Margin="2,0,0,0" FontSize="13"
                        Background="Transparent" BorderThickness="0"
                        VerticalAlignment="Stretch" VerticalContentAlignment="Center"
                        HorizontalContentAlignment="Center" CornerRadius="0"/>
                <Button Content="Settings" Padding="8,0" Margin="2,0,0,0" FontSize="13"
                        Background="Transparent" BorderThickness="0"
                        VerticalAlignment="Stretch" VerticalContentAlignment="Center"
                        HorizontalContentAlignment="Center" CornerRadius="0" Click="Settings_Click"/>
            </StackPanel>

            <Grid Grid.Column="1" MinWidth="138"/>
        </Grid>

        <Grid Grid.Row="1" BorderThickness="0,1,0,1" BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" MinWidth="45"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <ScrollViewer Grid.Column="0" x:Name="LineNumbersScrollViewer" VerticalScrollBarVisibility="Hidden" 
                        HorizontalAlignment="Stretch">
                <ScrollViewer.Resources>
                    <ResourceDictionary>
                        <SolidColorBrush x:Key="LineNumberBackgroundBrush" Color="{ThemeResource SystemChromeLowColor}"/>
                        <SolidColorBrush x:Key="LineNumberForegroundBrush" Color="{ThemeResource SystemBaseHighColor}"/>
                    </ResourceDictionary>
                </ScrollViewer.Resources>
                <ScrollViewer.Background>
                    <SolidColorBrush Color="{ThemeResource SystemChromeLowColor}"/>
                </ScrollViewer.Background>
                <TextBlock x:Name="LineNumbers" 
                         FontFamily="Consolas" 
                         Padding="5,5,5,5" 
                         TextAlignment="Right"
                         Foreground="{StaticResource LineNumberForegroundBrush}"/>
            </ScrollViewer>

            <ScrollViewer Grid.Column="1" x:Name="EditorScrollViewer">
                <RichEditBox x:Name="CodeEditor"
    FontFamily="Consolas"
    FontSize="14"
    AcceptsReturn="True"
    TextWrapping="NoWrap"
    BorderThickness="0"
    Padding="5,5,5,5"
    CornerRadius="0"
    Background="{ThemeResource SystemChromeLowColor}"
    Foreground="{ThemeResource SystemBaseHighColor}"
    SelectionHighlightColor="{ThemeResource SystemAccentColor}"
    IsSpellCheckEnabled="False"
    IsTextPredictionEnabled="False"
    VerticalAlignment="Stretch"
    HorizontalAlignment="Stretch"
                             PreviewKeyDown="CodeEditor_PreviewKeyDown"
                             CharacterReceived="CodeEditor_CharacterReceived">
                    <RichEditBox.Resources>
                        <ResourceDictionary>
                            <SolidColorBrush x:Key="TextControlBorderBrushPointerOver" Color="Transparent"/>
                            <SolidColorBrush x:Key="TextControlBorderBrushFocused" Color="Transparent"/>
                            <SolidColorBrush x:Key="TextControlForeground" Color="{ThemeResource SystemBaseHighColor}"/>
                            <SolidColorBrush x:Key="TextControlForegroundPointerOver" Color="{ThemeResource SystemBaseHighColor}"/>
                            <SolidColorBrush x:Key="TextControlForegroundFocused" Color="{ThemeResource SystemBaseHighColor}"/>
                        </ResourceDictionary>
                    </RichEditBox.Resources>
                </RichEditBox>
            </ScrollViewer>
        </Grid>

        <StackPanel Grid.Row="2" Orientation="Horizontal">
            <StackPanel.Background>
                <SolidColorBrush Color="{ThemeResource SystemChromeLowColor}"/>
            </StackPanel.Background>
            <TextBlock x:Name="StatusBarText" Text="Ln 1, Col 1" Margin="10,2,0,2"/>
        </StackPanel>
    </Grid>
</Window>