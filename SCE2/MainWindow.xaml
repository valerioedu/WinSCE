<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="SCE2.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SCE2"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:textcontrolbox="using:TextControlBoxNS"
    mc:Ignorable="d"
    Title="SCE">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="1"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid x:Name="CustomTitleBar" Grid.Row="0" Background="{ThemeResource SystemChromeLowColor}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Stretch" >
                <Button Content="File" Padding="8,0" Margin="2,0,0,0" FontSize="13"
                        Background="Transparent" BorderThickness="0" 
                        VerticalAlignment="Stretch" VerticalContentAlignment="Center"
                        HorizontalContentAlignment="Center" CornerRadius="0"
                        x:Name="FileButton">
                    <Button.KeyboardAccelerators>
                        <KeyboardAccelerator Key="F" Modifiers="Menu" Invoked="FileMenuShortcut_Invoked"/>
                    </Button.KeyboardAccelerators>
                    <Button.Flyout>
                        <MenuFlyout>
                            <MenuFlyoutItem Text="New" FontSize="11" Click="New_Click"
                                            KeyboardAcceleratorTextOverride="Ctrl+N"
                                            Background="{StaticResource SystemChromeMediumColor}"
                                            CornerRadius="0">
                                <MenuFlyoutItem.KeyboardAccelerators>
                                    <KeyboardAccelerator Key="N" Modifiers="Control"/>
                                </MenuFlyoutItem.KeyboardAccelerators>
                            </MenuFlyoutItem>

                            <MenuFlyoutItem Text="New Session" FontSize="11" Click="NewSession_Click"
                                            KeyboardAcceleratorTextOverride="Ctrl+Shift+S"
                                            Background="{StaticResource SystemChromeMediumColor}"
                                            CornerRadius="0">
                                <MenuFlyoutItem.KeyboardAccelerators>
                                    <KeyboardAccelerator Key="S" Modifiers="Shift, Control"/>
                                </MenuFlyoutItem.KeyboardAccelerators>
                            </MenuFlyoutItem>

                            <MenuFlyoutItem Text="New Window" FontSize="11" Click="NewSession_Click"
                                            KeyboardAcceleratorTextOverride="Ctrl+Shift+N"
                                            Background="{StaticResource SystemChromeMediumColor}"
                                            CornerRadius="0">
                                <MenuFlyoutItem.KeyboardAccelerators>
                                    <KeyboardAccelerator Key="N" Modifiers="Shift, Control"/>
                                </MenuFlyoutItem.KeyboardAccelerators>
                            </MenuFlyoutItem>

                            <MenuFlyoutSeparator/>

                            <MenuFlyoutItem Text="Open" FontSize="11" Click="Open_Click"
                                            KeyboardAcceleratorTextOverride="Ctrl+O"
                                            Background="{StaticResource SystemChromeMediumColor}"
                                            CornerRadius="0">
                                <MenuFlyoutItem.KeyboardAccelerators>
                                    <KeyboardAccelerator Key="O" Modifiers="Control"/>
                                </MenuFlyoutItem.KeyboardAccelerators>
                            </MenuFlyoutItem>

                            <MenuFlyoutItem Text="Open Folder" FontSize="11" Click="OpenFolder_Click"
                                            KeyboardAcceleratorTextOverride="Ctrl+K"
                                            Background="{StaticResource SystemChromeMediumColor}"
                                            CornerRadius="0">
                                <MenuFlyoutItem.KeyboardAccelerators>
                                    <KeyboardAccelerator Key="K" Modifiers="Control"/>
                                </MenuFlyoutItem.KeyboardAccelerators>
                            </MenuFlyoutItem>

                            <MenuFlyoutSeparator/>

                            <MenuFlyoutItem Text="Save" FontSize="11" Click="Save_Click"
                                            KeyboardAcceleratorTextOverride="Ctrl+S"
                                            Background="{StaticResource SystemChromeMediumColor}"
                                            CornerRadius="0">
                                <MenuFlyoutItem.KeyboardAccelerators>
                                    <KeyboardAccelerator Key="S" Modifiers="Control"/>
                                </MenuFlyoutItem.KeyboardAccelerators>
                            </MenuFlyoutItem>

                            <MenuFlyoutItem Text="Save As..." FontSize="11" Click="Save_Click"
                                            KeyboardAcceleratorTextOverride="Ctrl+Shift+S"
                                            Background="{StaticResource SystemChromeMediumColor}"
                                            CornerRadius="0">
                                <MenuFlyoutItem.KeyboardAccelerators>
                                    <KeyboardAccelerator Key="S" Modifiers="Shift,Control"/>
                                </MenuFlyoutItem.KeyboardAccelerators>
                            </MenuFlyoutItem>

                            <MenuFlyoutItem Text="Save All" FontSize="11"
                                            KeyboardAcceleratorTextOverride="Ctrl+Alt+S"
                                            Background="{StaticResource SystemChromeMediumColor}"
                                            CornerRadius="0">
                                <MenuFlyoutItem.KeyboardAccelerators>
                                    <KeyboardAccelerator Key="S" Modifiers="Control,Menu"/>
                                </MenuFlyoutItem.KeyboardAccelerators>
                            </MenuFlyoutItem>

                            <MenuFlyoutSeparator/>

                            <MenuFlyoutItem Text="Close Session" FontSize="11"
                                            KeyboardAcceleratorTextOverride="Alt+Q"
                                            Background="{StaticResource SystemChromeMediumColor}"
                                            CornerRadius="0">
                                <MenuFlyoutItem.KeyboardAccelerators>
                                    <KeyboardAccelerator Key="Q" Modifiers="Menu"/>
                                </MenuFlyoutItem.KeyboardAccelerators>
                            </MenuFlyoutItem>

                            <MenuFlyoutItem Text="Close Folder" FontSize="11"
                                            KeyboardAcceleratorTextOverride="Shift+Alt+Q"
                                            Background="{StaticResource SystemChromeMediumColor}"
                                            CornerRadius="0">
                                <MenuFlyoutItem.KeyboardAccelerators>
                                    <KeyboardAccelerator Key="Q" Modifiers="Shift,Menu"/>
                                </MenuFlyoutItem.KeyboardAccelerators>
                            </MenuFlyoutItem>

                            <MenuFlyoutSeparator/>
                            <MenuFlyoutItem Text="Quit" FontSize="11" Click="Quit_Click"
                                            KeyboardAcceleratorTextOverride="Ctrl+Q"
                                            Background="{StaticResource SystemChromeMediumColor}"
                                            >
                                <MenuFlyoutItem.KeyboardAccelerators>
                                    <KeyboardAccelerator Key="Q" Modifiers="Control"/>
                                </MenuFlyoutItem.KeyboardAccelerators>
                            </MenuFlyoutItem>
                        </MenuFlyout>
                    </Button.Flyout>
                </Button>
                <Button Content="Languages" Padding="8,0" Margin="2,0,0,0" FontSize="13"
                        Background="Transparent" BorderThickness="0"
                        VerticalAlignment="Stretch" VerticalContentAlignment="Center"
                        HorizontalContentAlignment="Center" CornerRadius="0">
                    <Button.Flyout>
                        <MenuFlyout>
                            <MenuFlyoutItem Text="C" FontSize="11" Tag="c" Click="SetLanguage_Click"/>
                            <MenuFlyoutItem Text="C++" FontSize="11" Tag="cpp" Click="SetLanguage_Click"/>
                            <MenuFlyoutItem Text="C#" FontSize="11" Tag="csharp" Click="SetLanguage_Click"/>
                            <MenuFlyoutSeparator/>
                            <MenuFlyoutItem Text="Java" FontSize="11" Tag="java" Click="SetLanguage_Click"/>
                            <MenuFlyoutItem Text="Go" FontSize="11" Tag="go" Click="SetLanguage_Click"/>
                            <MenuFlyoutItem Text="Rust" FontSize="11" Tag="rust" Click="SetLanguage_Click"/>
                            <MenuFlyoutItem Text="Python" FontSize="11" Tag="python" Click="SetLanguage_Click"/>
                            <MenuFlyoutSeparator/>
                            <MenuFlyoutItem Text="JavaScript" FontSize="11" Tag="javascript" Click="SetLanguage_Click"/>
                            <MenuFlyoutItem Text="HTML" FontSize="11" Tag="html" Click="SetLanguage_Click"/>
                            <MenuFlyoutItem Text="CSS" FontSize="11" Tag="css" Click="SetLanguage_Click"/>
                            <MenuFlyoutItem Text="XML" FontSize="11" Tag="xml" Click="SetLanguage_Click"/>
                            <MenuFlyoutItem Text="JSON" FontSize="11" Tag="json" Click="SetLanguage_Click"/>
                            <MenuFlyoutSeparator/>
                            <MenuFlyoutItem Text="Text" FontSize="11" Tag="text" Click="SetLanguage_Click"/>
                            <MenuFlyoutItem Text="Markdown" FontSize="11" Tag="markdown" Click="SetLanguage_Click"/>
                        </MenuFlyout>
                    </Button.Flyout>
                </Button>
                <Button Content="Git" Padding="8,0" Margin="2,0,0,0" FontSize="13"
                        Background="Transparent" BorderThickness="0"
                        VerticalAlignment="Stretch" VerticalContentAlignment="Center"
                        HorizontalContentAlignment="Center" CornerRadius="0" Click="Git_Click"/>
                <Button Content="Terminal" Padding="8,0" Margin="2,0,0,0" FontSize="13"
                        Background="Transparent" BorderThickness="0"
                        VerticalAlignment="Stretch" VerticalContentAlignment="Center"
                        HorizontalContentAlignment="Center" CornerRadius="0" Click="Terminal_Click"/>
                <Button Content="Settings" Padding="8,0" Margin="2,0,0,0" FontSize="13"
                        Background="Transparent" BorderThickness="0"
                        VerticalAlignment="Stretch" VerticalContentAlignment="Center"
                        HorizontalContentAlignment="Center" CornerRadius="0" Click="Settings_Click"/>
            </StackPanel>

            <Grid Grid.Column="1" MinWidth="138"/>
        </Grid>

        <Grid Grid.Row="1" Background="{ThemeResource SystemChromeLowColor}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="GitColumn" Width="0"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border x:Name="GitPanel" 
                    Grid.Column="0" 
                    Background="{ThemeResource SystemChromeLowColor}"
                    BorderThickness="0,1,1,0" 
                    BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}"
                    Visibility="Collapsed">
                <local:GitControl x:Name="GitControlPanel"/>
            </Border>

            <Border x:Name="GitSplitter" 
                    Grid.Column="1" 
                    Width="2" 
                    VerticalAlignment="Stretch"
                    Background="{ThemeResource SystemControlForegroundBaseLowBrush}"
                    Visibility="Collapsed"
                    ManipulationMode="TranslateX"
                    PointerPressed="GitSplitter_PointerPressed"
                    PointerMoved="GitSplitter_PointerMoved"
                    PointerReleased="GitSplitter_PointerReleased"/>

            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition x:Name="TerminalRow" Height="0"/>
                </Grid.RowDefinitions>

                <ScrollViewer x:Name="TabScrollViewer"  
                  Style="{StaticResource HoverScrollViewerStyle}"
                  Grid.Row="0"
                  HorizontalScrollBarVisibility="Auto" 
                  VerticalScrollBarVisibility="Disabled"
                  HorizontalScrollMode="Enabled" 
                  VerticalScrollMode="Disabled"
                  ZoomMode="Disabled" 
                  Height="35"
                  Background="{ThemeResource SystemChromeLowColor}"
                  BorderThickness="0,1,0,0" 
                  BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}">

                    <StackPanel x:Name="TabContainer" 
                                Orientation="Horizontal"
                                VerticalAlignment="Center"
                                Background="{ThemeResource SystemChromeBlackLowColor}"
                                BorderThickness="0,0,0,1" 
                                BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}"
                                />

                </ScrollViewer>

                <Grid Grid.Row="1" BorderThickness="0,0,0,1" BorderBrush="{ThemeResource SystemChromeLowColor}"/>
                <textcontrolbox:TextControlBox x:Name="CodeEditor" 
                                   Grid.Row="1"
                                   FontFamily="Consolas" 
                                   FontSize="14" 
                                   PreviewKeyDown="CodeEditor_PreviewKeyDown"/>

                <Border x:Name="TerminalSplitter" 
            Grid.Row="2" 
            Height="2" 
            HorizontalAlignment="Stretch"
            Background="{ThemeResource SystemControlForegroundBaseLowBrush}"
            Visibility="Collapsed"
            ManipulationMode="TranslateY"
            PointerPressed="TerminalSplitter_PointerPressed"
            PointerMoved="TerminalSplitter_PointerMoved"
            PointerReleased="TerminalSplitter_PointerReleased"/>

                <local:TerminalControl x:Name="TerminalPanel" 
                           Grid.Row="3" 
                           Visibility="Collapsed"/>
            </Grid>
        </Grid>

        <Border Grid.Row="2"
        Height="2"
        Background="{ThemeResource SystemControlForegroundBaseLowBrush}"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Center"
        ManipulationMode="TranslateY"/>


        <Grid Grid.Row="3" Background="{ThemeResource SystemChromeLowColor}" Height="26">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock x:Name="StatusBarText" Text="Ln 1, Col 1" Margin="10,2,0,2" Grid.Column="0"/>
            <TextBlock x:Name="GitBarText" Padding="5" VerticalAlignment="Center" Grid.Column="2" HorizontalAlignment="Center" />
            <TextBlock x:Name="FileNameBarText" Text="Untitled" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Column="3" Padding="10"/>
            <Button x:Name="LFButton" Content="CRLF" HorizontalAlignment="Right" CornerRadius="0" Grid.Column="4" Background="Transparent" FontSize="11" Click="LFButton_Click" BorderThickness="1,0,1,1" VerticalContentAlignment="Top"/>
        </Grid>
    </Grid>
</Window>